process {
    cpus = 1
    time = '1h'
    maxForks = 20
    shell = ['/bin/bash', '-euo', 'pipefail']
    stageOutMode = 'rsync'
    withName: 'fastqc' {
        cpus = 2
        time = '6h'
    }
    withName: 'fastp' {
        cpus = 2
        time = '2d'
    }
    withName: 'trimmomatic' {
        cpus = 2
        time = '2d'
    }
    withName: 'hisat2_index' {
        cpus = 4
        time = '1h'
    }
    withName: 'hisat2' {
        cpus = 16
        time = '4d'
    }
    withName: 'stringtie' {
        cpus = 8
        time = '4d'
    }
}
