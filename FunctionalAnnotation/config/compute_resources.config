process {
    cpus = 1
    maxForks = 20
    shell = ['/bin/bash', '-euo', 'pipefail']
    stageOutMode = 'rsync'
    withName: 'gff2protein' {
        time = '6h'
    }
    withName: 'makeblastdb' {
        time = '1d'
    }
    withName: 'blastp' {
        cpus = 8
        time = '6d'
    }
    withName: 'interproscan' {
        cpus = 8
        time = '10d'
    }
    withName: 'merge_functional_annotation' {
        time = '6h'
    }
}
